      <!-- User Name -->
      <div class="mt-2">
          <p class="m-0" style="font-weight: bold;"><%= user.first_name %> <%= user.last_name %></p>
      </div>
  </div>

  <!-- Navigation Section -->
  <ul class="nav flex-column p-3">
      <li class="nav-item">
          <a class="nav-link" href="/userProfile">
              <i class="fas si fa-user-circle me-2"></i>Account Overview
          </a>
      </li>
      <li class="nav-item">
          <a class="nav-link" href="/order-history">
              <i class="fas si fa-box-open me-2"></i>My Orders
