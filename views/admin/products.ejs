<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html{
            height: 100%;
        }
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f5f0;
            height: 100%;
        }

        .containerr {
            display: flex;
            height: 100%;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #ffffff;
            padding: 20px;
            min-height: 100%;
            display: flex;
            border-right: 2px solid #D3D3D3;
            flex-direction: column;
        }

        .sidebar h2 {
            font-size: 24px;
            color: #4b2c20;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
        }

        .sidebar ul li {
            padding: 10px 0;
            cursor: pointer;
            color: #4b2c20;
            font-weight: 500;
        }

        .sidebar ul li.active,
        .sidebar ul li:hover {
            color: #333;
            font-weight: bold;
        }

        .sidebar hr {
            margin: 20px 0;
            border: 0.5px solid #D3D3D3;
        }

        .main {
            flex: 1;
            padding: 20px;
        }
        a{
            color: #200b0b;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .top-bar button {
            background-color: #ff7043;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .top-bar .search-bar {
            position: relative;
        }

        .top-bar .search-bar input {
            padding: 10px 15px;
            width: 250px;
            border: 1px solid #ddd;
            border-radius: 20px;
        }

        .top-bar .search-bar i {
            position: absolute;
            right: 15px;
            top: 12px;
            color: #aaa;
        }

        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        .addForm {
            margin-top: 15px;
            width: 100%;
            border-collapse: collapse;
            background: rgb(228, 224, 224);
            padding: 32px 20px;
            border-radius: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            border: 2px solid rgb(182, 182, 182);
        }

        input {
            width: 400px;
            height: 50px;
            padding-left: 15px;
            border-radius: 15px;
            border: 1px solid rgb(224, 224, 224);
        }

        table th,
        table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #f3f3f3;
            color: #502314;
        }

        table td {
            font-size: 14px;
        }

        .edit-btn {
            background-color: #4caf50;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .toggle-status {
            display: flex;
            align-items: center;
        }

        .toggle-status input[type="checkbox"] {
            width: 40px;
            height: 20px;
            margin-right: 10px;
            appearance: none;
            background-color: #ccc;
            border-radius: 10px;
            position: relative;
            cursor: pointer;
            outline: none;
        }

        .logout-btn {
            background-color: #ff8c66;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .toggle-status input[type="checkbox"]:checked {
            background-color: #4caf50;
        }

        .toggle-status input[type="checkbox"]:checked:before {
            left: 20px;
        }

        .toggle-status input[type="checkbox"]:before {
            content: "";
            position: absolute;
            width: 18px;
            height: 18px;
            background-color: white;
            border-radius: 50%;
            top: 1px;
            left: 1px;
            transition: left 0.2s;
        }

        .bt-td {
            text-align: center;
        }

        .add-user-btn {
            background-color: #ff7043;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            display: inline-block;
        }

        /* add user modal */
        .modal-content {
            border-radius: 15px;
            padding: 20px;
            background-color: #fdfcf8;
            /* Light beige background */
        }

        .input-custom {
            border-radius: 30px;
            padding: 10px 15px;
            font-size: 14px;
            border: 1px solid #ddd;
        }
        .soft-bt{
            width: 100px;
            padding: 2px 2px;
        }

        .input-custom:focus {
            outline: none;
            border-color: #82c91e;
            /* Matching green color */
            box-shadow: 0 0 5px #82c91e;
        }

        .btn-success {
            background-color: #82c91e;
            /* Custom green color */
            border: none;
            border-radius: 30px;
            padding: 10px 15px;
            font-size: 16px;
        }

        .btn-success:hover {
            background-color: #72b416;
            /* Slightly darker green */
        }
        .r-bt{
            padding: 1px 10px;
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="containerr">
        <aside class="sidebar">
            <h2>Eternal Chapter</h2>
            <ul>
                <li class="active"><a href="/admin" class="text-decoration-none">Dashboard</a></li>
                <li><a class="text-decoration-none" href="/admin/products">Books</a></li>
                <li>Orders</li>
                <li><a class="text-decoration-none" href="/admin/users">Customers</a></li>
                <li>Reviews</li>
                <li>Offers</li>
            </ul>
            <hr>
            <ul>
                <li>Contact us</li>
                <li>Coupon</li>
                <li><a class="text-decoration-none" href="/admin/banners">Banner Management</a></li>
        <li><a class="text-decoration-none" href="/admin/categories">Category</a></li>
                <li>Notification</li>
            </ul>
        </aside>

        <div class="main">
            <div class="top-bar">
                <a href="/admin/logout" class="logout-btn text-decoration-none">Log out</a>
                
                <div class="search-bar">
                    <a href="/admin/addProduct" class="btn btn-primary rounded-pill pt-2 pb-2 me-3" >Add Product</a>
                    <!-- <form action="/admin/users"> -->
                    <input type="text" id="search" onkeyup="search()" placeholder="Search by category name">
                    <i class="fas fa-search"></i>
                    <!-- </form> -->
                </div>
            </div>

            <div class="table-container">
                <h3 class="fw-bold mb-4">Books</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Book</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Review</th>
                            <th class="bt-td">Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach((product)=>{ %>

                            <tr id="searchData">
                                <td>
                                    <img src="/uploads/<%= product.product_imgs[0] %>" alt="<%= product.title %>" width="50" height="84">
                                </td>
                                <td>
                                    <%= product.title %>
                                </td>
                                <td>
                                    <% const categoryId = category.find(cat => cat._id.toString() === product.category_id.toString()) %>
                                    <%= categoryId ? categoryId.name : "Uncategorized" %>
                                </td>
                                <td>
                                    <%= product.price + '/-' %>
                                </td>
                                <td>
                                    <%= product.available_quantity %>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-primary rounded-pill r-bt"><a class="text-white text-decoration-none" href="">Review</a></button>
                                </td>

                                <!-- <td class="bt-td">
                                    
                                </td> -->
                                <td class="bt-td">
                                    <button class="edit-btn rounded-pill me-3 ps-3 pe-3"><a class="text-decoration-none text-white" href="/admin/editProduct?id=<%= product._id %>">Edit</a></button>

                                    <% if(product.is_deleted){ %>

                                    <form action="/admin/restoreProduct/<%= product._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-success p-1 soft-bt">Inactive</button>
                                    </form>
                                    <% }else{ %>
                                        <form action="/admin/soft-deleteProduct/<%= product._id %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-danger rounded-pill soft-bt">Active</button>
                                        </form>
                                    <% } %>
                                    <form action="/admin/deleteProduct/<%= product._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-btn ms-3"><i class="bi bi-archive-fill"></i></button>
                                    </form>
                                    
                                </td>
                            </tr>

                            <% }) %>
                    </tbody>
                </table>

            </div>

        </div>
    </div>


    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (success && success.length > 0) { %>
        <script>
            Swal.fire({
                title: "Success",
                text: "<%= success %>",
                icon: "success",
                confirmButtonText: 'OK',
                customClass: {
                    popup: 'my-swal-popup', // Custom class for the popup
                    title: 'my-swal-title', // Custom class for the title
                    content: 'my-swal-content', // Custom class for the content (text)
                    confirmButton: 'my-swal-btn' // Custom class for the button
                },
            });
        </script>
    <% } %>

    <script>

        function search() {
            const input = document.getElementById("search").value.toLowerCase().trim(); // Get search input and convert to lowercase
            const rows = document.querySelectorAll("#searchData"); // Get all rows to search

            rows.forEach((row) => {
                const cat = row.children[1].textContent.toLowerCase().trim(); // Get user name in the second column (index 1)
                if (cat.includes(input)) {
                    row.style.display = ""; // Show row if it matches the search
                } else {
                    row.style.display = "none"; // Hide row if it doesn't match
                }
            });
        }

        // //edit category
        // function editCategory(name) {
        //     const editForm = document.getElementById('editForm')
        //     editForm.style.display = "flex"


        //     document.getElementById("editName").value = name;
        //     document.getElementById("editDescription").value = ""
        // }

        // Edit category modal function
        function editCategory(name,description,id) {
            document.getElementById("editCategoryId").value = id
            document.getElementById("editName").value = name
            document.getElementById("editDescription").value = description

            //show modal
            const editCategoryModal = new bootstrap.Modal(document.getElementById("editCategoryModal"))
            editCategoryModal.show()
         }

    </script>
</body>

</html>