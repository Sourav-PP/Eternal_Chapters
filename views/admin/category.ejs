<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f5f0;
        }

        .containerr {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #ffffff;
            padding: 20px;
            height: 100vh;
            display: flex;
            border-right: 2px solid #D3D3D3;
            flex-direction: column;
        }

        .sidebar h2 {
            font-size: 24px;
            color: #4b2c20;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
        }

        .sidebar ul li {
            padding: 10px 0;
            cursor: pointer;
            color: #4b2c20;
            font-weight: 500;
        }

        .sidebar ul li.active,
        .sidebar ul li:hover {
            color: #333;
            font-weight: bold;
        }

        .sidebar hr {
            margin: 20px 0;
            border: 0.5px solid #D3D3D3;
        }

        .main {
            flex: 1;
            padding: 20px;
        }
        a{
            color: #200b0b;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .top-bar button {
            background-color: #ff7043;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .top-bar .search-bar {
            position: relative;
        }

        .top-bar .search-bar input {
            padding: 10px 15px;
            width: 250px;
            border: 1px solid #ddd;
            border-radius: 20px;
        }

        .top-bar .search-bar i {
            position: absolute;
            right: 15px;
            top: 12px;
            color: #aaa;
        }

        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        .addForm {
            margin-top: 15px;
            width: 100%;
            border-collapse: collapse;
            background: rgb(228, 224, 224);
            padding: 32px 20px;
            border-radius: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            border: 2px solid rgb(182, 182, 182);
        }

        input {
            width: 400px;
            height: 50px;
            padding-left: 15px;
            border-radius: 15px;
            border: 1px solid rgb(224, 224, 224);
        }

        table th,
        table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table th {
            background-color: #f3f3f3;
            color: #502314;
        }

        table td {
            font-size: 14px;
        }

        .edit-btn {
            background-color: #0085b6;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .toggle-status {
            display: flex;
            align-items: center;
        }

        .toggle-status input[type="checkbox"] {
            width: 40px;
            height: 20px;
            margin-right: 10px;
            appearance: none;
            background-color: #ccc;
            border-radius: 10px;
            position: relative;
            cursor: pointer;
            outline: none;
        }

        .logout-btn {
            background-color: #ff8c66;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .toggle-status input[type="checkbox"]:checked {
            background-color: #4caf50;
        }

        .toggle-status input[type="checkbox"]:checked:before {
            left: 20px;
        }

        .toggle-status input[type="checkbox"]:before {
            content: "";
            position: absolute;
            width: 18px;
            height: 18px;
            background-color: white;
            border-radius: 50%;
            top: 1px;
            left: 1px;
            transition: left 0.2s;
        }

        .bt-td {
            text-align: right;
        }

        .add-user-btn {
            background-color: #ff7043;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            display: inline-block;
        }

        /* add user modal */
        .modal-content {
            border-radius: 15px;
            padding: 20px;
            background-color: #fdfcf8;
            /* Light beige background */
        }

        .input-custom {
            border-radius: 30px;
            padding: 10px 15px;
            font-size: 14px;
            border: 1px solid #ddd;
        }
        .soft-bt{
            width: 100px;
            padding: 2px 2px;
        }

        .input-custom:focus {
            outline: none;
            border-color: #82c91e;
            /* Matching green color */
            box-shadow: 0 0 5px #82c91e;
        }

        .btn-success {
            background-color: #82c91e;
            /* Custom green color */
            border: none;
            border-radius: 30px;
            padding: 5px 15px;
            font-size: 16px;
        }

        .btn-success:hover {
            background-color: #72b416;
            /* Slightly darker green */
        }
        .delete-btn{
            border: transparent;
            border-radius: 20px;
            
        }

        .my-swal-popup {
            background-color: #ffffff; /* Light red background */
            border-radius: 15px;        /* Rounded corners */
            border: 2px solid #f5c6cb; /* Border matching the background */
            padding: 25px 35px;         /* More padding inside */
            width: 400px;               /* Set width */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Add subtle shadow */
        }
    </style>
</head>

<body>
    <div class="containerr">
        <aside class="sidebar">
            <h2>Eternal Chapter</h2>
            <ul>
                <li class="active"><a href="/admin" class="text-decoration-none">Dashboard</a></li>
                <li><a class="text-decoration-none" href="/admin/products">Books</a></li>
                <li>Orders</li>
                <li><a class="text-decoration-none" href="/admin/users">Customers</a></li>
                <li>Reviews</li>
                <li>Offers</li>
            </ul>
            <hr>
            <ul>
                <li>Contact us</li>
                <li>Coupon</li>
                <li><a class="text-decoration-none" href="/admin/banners">Banner Management</a></li>
                <li><a class="text-decoration-none" href="/admin/categories">Category</a></li>
                <li>Notification</li>
            </ul>
        </aside>

        <div class="main">
            <div class="top-bar">
                <a href="/admin/logout" class="logout-btn text-decoration-none">Log out</a>
                <div class="search-bar">
                    <input type="text" id="search" onkeyup="search()" placeholder="Search by category name">
                    <i class="fas fa-search"></i>
                </div>
            </div>

            <div class="table-container">
                <h3 class="fw-bold mb-4">Categories</h3>
                <table>
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% category.forEach((cat, index) => { %>
                            <tr id="searchData">
                                <td><%= index + 1 %></td>
                                <td><%= cat.name %></td>
                                <td class="bt-td">
                                    <button class="edit-btn rounded-pill me-3 ps-3 pe-3" onclick="editCategory('<%= cat.name %>', '<%- cat.description %>', '<%= cat._id %>')">Edit</button>
                                    <% if (cat.is_deleted) { %>
                                    <form action="/admin/restoreCategory/<%= cat._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-danger rounded-pill p-1 soft-bt">Unblock</button>
                                    </form>
                                    <% } else { %>
                                    <form action="/admin/soft-delete/<%= cat._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="btn btn-success soft-bt bt-block">Block</button>
                                    </form>
                                    <% } %>
                                    <form action="/admin/deleteCategory/<%= cat._id %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-btn ms-3"><i class="bi bi-archive-fill"></i></button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- SweetAlert -->
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <% if (error) { %>
                <script>
                    Swal.fire({
                        title: "Error",
                        text: "<%= error %>",
                        icon: "error",
                        confirmButtonText: 'OK',
                        customClass: {
                            popup: 'my-swal-popup', // Custom class for the popup
                            title: 'my-swal-title', // Custom class for the title
                            content: 'my-swal-content', // Custom class for the content (text)
                            confirmButton: 'my-swal-btn' // Custom class for the button
                        },
                    });
                </script>
            <% } %>

            <form action="/admin/addCategory" method="post" class="addForm">
                <input type="text" name="name" placeholder="Enter the name" required>
                <input type="text" name="description" placeholder="Description" required>
                <button class="add-user-btn fw-semibold">Add Category</button>
            </form>

            <!-- Modal for Editing Category -->
            <div class="modal fade" id="editCategoryModal" tabindex="-1" aria-labelledby="editCategoryModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editCategoryModalLabel">Edit Category</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form id="editCategoryForm" action="/admin/editCategory" method="post">
                            <div class="modal-body">
                                <input type="hidden" name="_id" id="editCategoryId">
                                <div class="mb-3">
                                    <label for="editName" class="form-label">Category Name</label>
                                    <input type="text" class="form-control" id="editName" name="name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="editDescription" class="form-label">Description</label>
                                    <textarea class="form-control" id="editDescription" name="description" rows="3" required></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    



    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>


    <script>

        function search() {
            const input = document.getElementById("search").value.toLowerCase().trim(); // Get search input and convert to lowercase
            const rows = document.querySelectorAll("#searchData"); // Get all rows to search

            rows.forEach((row) => {
                const cat = row.children[1].textContent.toLowerCase().trim(); // Get user name in the second column (index 1)
                if (cat.includes(input)) {
                    row.style.display = ""; // Show row if it matches the search
                } else {
                    row.style.display = "none"; // Hide row if it doesn't match
                }
            });
        }

        // //edit category
        // function editCategory(name) {
        //     const editForm = document.getElementById('editForm')
        //     editForm.style.display = "flex"


        //     document.getElementById("editName").value = name;
        //     document.getElementById("editDescription").value = ""
        // }

        // Edit category modal function
        function editCategory(name,description,id) {
            document.getElementById("editCategoryId").value = id
            document.getElementById("editName").value = name
            document.getElementById("editDescription").value = description

            //show modal
            const editCategoryModal = new bootstrap.Modal(document.getElementById("editCategoryModal"))
            editCategoryModal.show()
         }

    </script>
</body>

</html>