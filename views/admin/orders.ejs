<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customers Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="/admin/admin.css" />
    <link rel="stylesheet" href="/admin/adminProducts.css" />

    <style>
        /* styles.css */
        .table-holder {
            margin-top: 4rem;
            border-radius: 20px;
            background-color: rgb(255, 255, 255);
            padding: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .custom-table {
            font-family: "Arial", sans-serif;
            border-collapse: separate;
            border: 1px solid #ffffff;
            border-spacing: 0;
            background-color: #ffffff;
        }

        .custom-table thead {
            background-color: #f8f9fa;
            border-radius: 15px;
        }

        .custom-table tbody tr td {
            vertical-align: middle;
            border-bottom: 1px solid #d0d0d0;
        }

        .img-thumbnail {
            width: 50px;
            height: auto;
            border: none;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.5em 0.75em;
            border-radius: 10px;
        }

        .cncl {
            font-size: .9rem;
        }

        .approve{
            width:100px;
        }

        .reject {
            width: 100px
        }
    </style>
</head>

<body>
<div class="container-fluid holder">
    <!-- Header -->
    <%- include('../../views/partials/admin/header') %>

    <div class="row side">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 sidebar-container vh-100 position-fixed">
            <%- include('../../views/partials/admin/sidebar') %>
        </div>

        <div class="col-md-9 col-lg-10 offset-md-3 offset-lg-2 main-content">
            <!-- content goes here -->
            <div class="container my-5 table-holder">
                <h3 class="fw-bold mb-4">Orders</h3>
                <table class="table table-bordered table-hover table-responsive-md custom-table">
                    <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% orders.forEach(order => { %>
                        <% order.orderItems.forEach(orderItem => { %>
                            <% orderItem.items.forEach(item => { %>
                                <tr>
                                    <td>
                                        <img src="/uploads/<%= item.product_id.product_imgs[0] %>" alt="<%= item.product_id.title %>" class="img-thumbnail" />
                                    </td>
                                    <td><%= item.product_id.title %></td>
                                    <td><%= order.address_id ? order.address_id.city : 'No City Provided' %></td>
                                    <td><%= order.order_date.toLocaleDateString('en-GB') %></td>
                                    <td><%= item.product_id.category_id.name %></td>
                                    <td>
                                        <form action="/admin/update-order-status/<%= order._id %>/<%= item.product_id._id %>" method="POST">
                                            <% if (item.status === 'pending') { %>
                                                <select name="status" class="form-select" onchange="this.form.submit()">
                                                    <option value="pending" <%= item.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="shipped" <%= item.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                                    <option value="canceled" <%= item.status === 'canceled' ? 'selected' : '' %>>Canceled</option>
                                                </select>
                                            <% } else if (item.status === 'shipped') { %>
                                                <select name="status" class="form-select" onchange="this.form.submit()">
                                                    <option value="shipped" <%= item.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                                    <option value="delivered" <%= item.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                                    <option value="canceled" <%= item.status === 'canceled' ? 'selected' : '' %>>Canceled</option>
                                                </select>
                                            <% } else if (item.status === 'return_requested') { %>
                                              <div class="d-flex flex-column">
                                                <p class="form-text fw-bold text-dark">Return Requested</p>
                                                <button class="btn btn-success btn-sm mb-2 approve" formaction="/admin/approve-return/<%= order._id %>/<%= item.product_id._id %>" method="POST">Approve</button>
                                                <button class="btn btn-danger rounded-pill btn-sm reject" formaction="/admin/reject-return/<%= order._id %>/<%= item.product_id._id %>" method="POST">Reject</button>
                                            </div>
                                            <% } else if (item.status === 'ret') { %>
                                             
                                            <% } else { %>
                                                <!-- Display plain text for 'delivered' and 'canceled' statuses -->
                                                <p class="form-text fw-bold ms-2 text-danger cncl"><%= item.status.charAt(0).toUpperCase() + item.status.slice(1) %></p>
                                            <% } %>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% }) %>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (success && success.length > 0) { %>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: '<%= success[0] %>',
            showConfirmButton: false,
            timer: 1500
        });
    </script>
<% } %>

<% if (error && error.length > 0) { %>
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '<%= error[0] %>',
            showConfirmButton: false,
            timer: 2000
        });
    </script>
<% } %>

<script>
    function search() {
        const input = document
            .getElementById("search")
            .value.toLowerCase()
            .trim(); // Get search input and convert to lowercase
        const rows = document.querySelectorAll("#searchData"); // Get all rows to search

        rows.forEach((row) => {
            const cat = row.children[1].textContent.toLowerCase().trim(); // Get user name in the second column (index 1)
            if (cat.includes(input)) {
                row.style.display = ""; // Show row if it matches the search
            } else {
                row.style.display = "none"; // Hide row if it doesn't match
            }
        });
    }
</script>
</body>
</html>