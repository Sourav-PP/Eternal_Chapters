<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <!-- cropper -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.css">

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f9f5f0;
        }

        .containerr {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #ffffff;
            padding: 20px;
            height: 100vh;
            display: flex;
            border-right: 2px solid #D3D3D3;
            flex-direction: column;
        }

        .sidebar h2 {
            font-size: 24px;
            color: #4b2c20;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style: none;
        }

        .sidebar ul li {
            padding: 10px 0;
            cursor: pointer;
            color: #4b2c20;
            font-weight: 500;
        }

        .sidebar ul li.active,
        .sidebar ul li:hover {
            color: #333;
            font-weight: bold;
        }

        .sidebar hr {
            margin: 20px 0;
            border: 0.5px solid #D3D3D3;
        }

        .main {
            flex: 1;
            padding: 20px;
        }

        a {
            color: #200b0b;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .top-bar button {
            background-color: #ff7043;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .top-bar .search-bar {
            position: relative;
        }

        .top-bar .search-bar input {
            padding: 10px 15px;
            width: 250px;
            border: 1px solid #ddd;
            border-radius: 20px;
        }

        .top-bar .search-bar i {
            position: absolute;
            right: 15px;
            top: 12px;
            color: #aaa;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
        }

        th,
        td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:last-child td {
            border-bottom: none;
        }

        .table-container {
            margin: 20px 0;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .controls {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .controls select,
        .controls input {
            padding: 8px 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .update-button {
            
            cursor: pointer;
        }

        .delete-button {
            color: #d9534f;
            border: none;
            background: none;
            cursor: pointer;
        }

        .delete-button:hover {
            text-decoration: underline;
        }

        .status {
            font-weight: bold;
            color: #28a745;
        }

        /* ________ */

        .logout-btn {
            background-color: #ff8c66;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        .addForm {
            margin-top: 15px;
            width: 100%;
            border-collapse: collapse;
            background: rgb(228, 224, 224);
            padding: 32px 20px;
            border-radius: 15px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            gap: 50px;
            border: 2px solid rgb(182, 182, 182);
        }

        .addForm input[type="text"],
        .addForm input[type="number"],
        .addForm input[type="file"],
        .addForm input[type="date"],
        .addForm select,
        .addForm textarea {
            width: 350px;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #d5d5d5;
            border-radius: 10px;
            background-color: #fefefe;
        }

        .banner-h2 {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 25px;
        }

        /* cropper */
        #croppedImgContainer {
            display: none;
            text-align: center;
            margin-top: 20px;
        }

        #croppedImg {
            max-width: 100%;
            max-height: 300px;
        }
    </style>
</head>

<body>
    <div class="containerr">
        <aside class="sidebar">
            <h2>Eternal Chapter</h2>
            <ul>
                <li class="active"><a href="/admin" class="text-decoration-none">Dashboard</a></li>
                <li><a class="text-decoration-none" href="/admin/products">Books</a></li>
                <li>Orders</li>
                <li><a class="text-decoration-none" href="/admin/users">Customers</a></li>
                <li>Reviews</li>
                <li>Offers</li>
            </ul>
            <hr>
            <ul>
                <li>Contact us</li>
                <li>Coupon</li>
                <li>Banner management</li>
                <li><a class="text-decoration-none" href="/admin/categories">Category</a></li>
                <li>Notification</li>
            </ul>
        </aside>

        <div class="main">
            <div class="top-bar">
                <a href="/admin/logout" class="logout-btn text-decoration-none">Log out</a>
                <div class="search-bar">
                    <!-- <form action="/admin/users"> -->
                    <input type="text" id="search" onkeyup="search()" placeholder="Search by category name">
                    <i class="fas fa-search"></i>
                    <!-- </form> -->
                </div>
            </div>
            <h2 class="banner-h2">banner Management</h2>

            <div class="controls">
                <div>
                    <label for="sort">Sort</label>
                    <select id="sort">
                        <option value="start-date">Starting Date</option>
                        <option value="end-date">Ending Date</option>
                    </select>

                    <label for="order">By</label>
                    <select id="order">
                        <option value="ascending">Ascending</option>
                        <option value="descending">Descending</option>
                    </select>
                </div>

                <div>
                    <label for="filter">Filter</label>
                    <select id="filter">
                        <option value="all">All</option>
                        <option value="less-than-15">Less than 15 days left</option>
                        <option value="more-than-15">More than 15 days left</option>
                    </select>
                </div>
            </div>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Starting Date</th>
                            <th>Ending Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(element=> { %>

                            <tr>
                                <td>
                                    <%= element.name %>
                                </td>
                                <td><img src="/uploads/<%= element.banner_img %>" style="height: 2rem; width: 4rem;"
                                        alt=""></td>
                                <td>1/05/2024</td>
                                <td>14/05/2024</td>
                                <td class="status">
                                    <% if (element.start_date < Date.now() && element.end_date> Date.now()) { %>
                                        <p>Active</p>
                                        <% } else { %>
                                            <p>Not Active</p>
                                            <% } %>
                                </td>
                                <td>
                                    <button class="update-button btn btn-primary">Update</button>
                                    <button class="delete-button"><a class="btn btn-danger" href="/admin/deleteBanner?id=<%= element._id %>">Delete</a></button>
                                </td>
                            </tr>

                            <% }) %>
                    </tbody>
                </table>
            </div>

            <form action="/admin/addBanner" method="post" class="addForm" enctype="multipart/form-data">
                <div class="d-flex flex-column gap-2">
                    <input type="text" name="name" placeholder="Enter the name">
                    <input type="text" name="status" placeholder="Status">
                </div>
                <div class="d-flex flex-column gap-2">
                    <input type="date" name="start_date" placeholder="Startin date">
                    <input type="date" name="end_date" placeholder="Ending date">
                </div>
                <div class="d-flex flex-column gap-2">
                    <label for="upload-image">Upload an Image:</label>
                    <input type="file" id="upload-image" name="image" accept="image/*">
                    <div id="croppedImgContainer">
                        <h3>Preview & Crop</h3>
                        <img id="croppedImg" alt="Cropped Image Preview">
                        <button type="button" id="saveButton">Save Cropped Image</button>
                    </div>
                    <button class="btn btn-success fw-semibold">Add Banner</button>
                </div>


            </form>


            <!-- Bootstrap JS Bundle -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
            <!-- Cropper js -->
            <script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>
            

            <script>

                function search() {
                    const input = document.getElementById("search").value.toLowerCase().trim(); // Get search input and convert to lowercase
                    const rows = document.querySelectorAll("#searchData"); // Get all rows to search

                    rows.forEach((row) => {
                        const cat = row.children[1].textContent.toLowerCase().trim(); // Get user name in the second column (index 1)
                        if (cat.includes(input)) {
                            row.style.display = ""; // Show row if it matches the search
                        } else {
                            row.style.display = "none"; // Hide row if it doesn't match
                        }
                    });
                }


                //image cropper functionality

                function viewImage(event) {
                    let input = event.target;
                    let reader = new FileReader();

                    reader.onload = function () {
                        let dataURL = reader.result
                        let image = document.getElementById('croppedImg');
                        image.src = dataURL;

                        // Initializing cropper instance
                        let cropper = new Cropper(image, {
                            aspectRatio: 5 / 2,
                            viewMode: 1,
                            guides: true,
                            background: false,
                            autoCropArea: 1,
                            zoomable: true
                        })

                        let cropperContainer = document.querySelector("#croppedImg").parentNode;
                        cropperContainer.style.display = 'block'

                        let saveButton = document.querySelector("#saveButton")
                        saveButton.addEventListener('click', async function () {
                            let croppedCanvas = cropper.getCroppedCanvas()
                            let croppedImage = document.getElementById("croppedImg");
                            croppedImage.src = croppedCanvas.toDataURL('image/jpeg', 1.0);

                            let timestamp = new Date().getTime();
                            let fileName = `cropped-img-${timestamp}.png`;

                            await croppedCanvas.toBlob(blob => {
                                let imgFile = new File([blob], fileName, blob)
                                const fileList = new DataTransfer();
                                fileList.items.add(imgFile);

                                const uploadInput = document.getElementById('upload-image');
                                uploadInput.files = fileList.files;
                            })

                            cropperContainer.style.display = 'none'
                            cropper.destroy()
                        });
                    };
                    reader.readAsDataURL(input.files[0])
                }

                //Event listner for file input
                const uploadInput = document.getElementById('upload-image');
                uploadInput.addEventListener('change', viewImage);

                const selectedImages = []
                document.getElementById("upload-image1").addEventListener("change", handleFileSelect);

                function handleFileSelect(event) {
                    const addedImagesContainer = document.getElementById("addedImagesContainer")
                    addedImagesContainer.innerHTML = "";
                    const files = event.target.files;

                    for (let i = 0; i < files.length; i++) {
                        const file = files[i]
                        selectedImages.push(file)
                        const thumbnail = document.createElement("div")
                        thumbnail.classList.add("thumbnail");

                        const img = document.createElement('img')
                        img.src = URL.createObjectURL(file);
                        img.alt = "thumbnail";
                        img.style.width = "50px"
                        img.style.height = 'auto';
                        const removeIcon = document.createElement("span")
                        removeIcon.classList.add("remove-icon")
                        removeIcon.innerHTML = "&times;";
                        removeIcon.addEventListener('click', function () {
