<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Eternal Chapter</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


  <link href="styles.css" rel="stylesheet"> <!-- Add your custom CSS here -->

  <style>
    /* General Styles */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #FFF8E5;
    }

    .custom-navbar {
      background-color: #f6d382;
      padding: 1.5rem;
      border-bottom: 1px solid #ddd;
    }

    .navbar-brand {
      font-size: 1.8rem;
      font-weight: bold;
      color: #3d2a28;
    }

    .nav-link {
      color: #3d2a28;
      margin-right: 20px;
      font-weight: 500;
    }

    .nav-link:hover {
      color: #8b5e3c;
    }

    .navbar-toggler-icon {
      background-color: #3d2a28;
    }

    /* Search Bar */
    .form-control {
      border-top-left-radius: 30px;
      border-bottom-left-radius: 30px;
      border-top-right-radius: 0px;
      border-bottom-right-radius: 0px;
      padding: 0.5rem 1rem;
      border: 1px solid #ddd;
    }

    .btn-search {
      border-top-right-radius: 30px;
      border-bottom-right-radius: 30px;
      border-top-left-radius: 0px;
      border-bottom-left-radius: 0px;

      background-color: #3d2a28;
      color: #fff;
      padding: 0.5rem 1rem;
      border: none;
    }

    .btn-search:hover {
      background-color: #8b5e3c;
    }

    /* Icons */
    .navbar-icons i {
      font-size: 1.5rem;
      color: #3d2a28;
      margin-left: 15px;
    }

    .navbar-icons i:hover {
      color: #8b5e3c;
    }

    .card {
      transition: transform 0.2s ease;
      width: 95%;
      border-radius: 20px;
      padding-top: 17px;
      text-align: center;
    }
    .card img {
      border-radius: 20px;
      width: 80%;
      height: 80%;
      margin: auto;
    }

    .card:hover {
      transform: scale(1.05);
    }

    footer {
      background-color: #341616;
      border-top: 1px solid #ddd;
      color: #fff;
    }

    footer a {
      color: #b8b8b8;
      text-decoration: none;
    }

    footer a:hover {
      text-decoration: underline;
    }

    /* custom */
    .best {
      font-size: 1.8rem;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light custom-navbar">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Eternal Chapter</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Novel</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Kids</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Fantasy</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Romance</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Thriller</a></li>
          <li class="nav-item"><a class="nav-link" href="#">Offer</a></li>
        </ul>
        <!-- Search Bar -->
        <form class="d-flex ms-2">
          <input class="form-control" type="search" placeholder="Search">
          <button class="btn btn-search" type="submit">Search</button>
        </form>
        <!-- Icons -->
        <div class="navbar-icons">
          <i class="bi bi-bell"></i>
          <i class="bi bi-cart"></i>
          <i class="bi bi-heart"></i>
          <i class="bi bi-person"></i>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="container my-4">
    <div class="row">
      <div class="col">
        <img src="banner.jpg" class="img-fluid" alt="Promotional Banner">
      </div>
    </div>
  </div>

  <!-- Best Seller Section -->
  <div class="container">
    <h2 class="text-center mb-4 best">BEST SELLER</h2>
    <div class="row">
      <!-- Product Card -->
      <% products.forEach(product=> { %>
        <div class="col-md-3 mb-4">
          <div class="card shadow-sm">
            <img src="/uploads/<%= product.product_imgs[0] %>" class="card-img-top" alt="<%= product.title %>">
            <div class="card-body">
              <h5 class="card-title fw-bold mb-0">
                <%= product.title %>
              </h5>
              <p class="text-success fw-bold mb-0">â‚¹<%= product.price %>.00</p>
              <p class="text-muted small">
                <%= product.author_name %>
              </p>
              <p class="text-danger small mb-0">
                <%= product.status %>
              </p>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="py-4 mt-4">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h6>Contact</h6>
          <ul class="list-unstyled">
            <li><a href="#">Home</a></li>
            <li><a href="#">Contact us</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Customer Service</h6>
          <ul class="list-unstyled">
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Shipping and Returns</a></li>
            <li><a href="#">Order Tracking</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>About Us</h6>
          <ul class="list-unstyled">
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Shipping and Returns</a></li>
            <li><a href="#">Order Tracking</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h6>Follow Us</h6>
          <div>
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-linkedin"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>